{
  "name": "webpack-boilerplate",
  "version": "1.0.1",
  "description": "Boilerplate for webpack projects",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch webpack.config.ts --exec \"webpack serve --env dev --mode=development\"",
    "build:code": "webpack --mode=production --env prod --progress",
    "build:stats": "webpack --mode=production --env prod --progress --json > stats.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build:analyzer": "webpack-bundle-analyzer --port 4200 stats.json",
    "build": "concurrently --kill-others \"npm run build:code\" \"npm run build:stats\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eutrepe/webpack-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "boilerplate"
  ],
  "author": "Maciej Bobrowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Eutrepe/webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/Eutrepe/webpack-boilerplate#readme",
  "engines": {
    "node": ">= 10.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.4",
    "@types/mini-css-extract-plugin": "^1.2.1",
    "@types/script-ext-html-webpack-plugin": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "autoprefixer": "^10.0.4",
    "babel-loader": "^8.2.2",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "error-overlay-webpack-plugin": "^0.4.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "extract-loader": "^5.1.0",
    "favicons-webpack-plugin": "^4.2.0",
    "file-loader": "^6.2.0",
    "git-revision-webpack-plugin": "^3.0.6",
    "html-loader": "^1.3.2",
    "html-webpack-harddisk-plugin": "^1.0.2",
    "html-webpack-plugin": "^4.5.0",
    "image-webpack-loader": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "mini-css-extract-plugin": "^1.3.1",
    "nodemon": "^2.0.6",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.1.13",
    "postcss-loader": "^4.1.0",
    "precss": "^4.0.0",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "style-loader": "^2.0.0",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.0",
