{
  "name": "webpack-boilerplate",
  "version": "1.0.1",
  "description": "Boilerplate for webpack projects",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch webpack.config.ts --exec \"AUTOPREFIXER_GRID=autoplace webpack serve --mode=development --env dev\"",
    "build:code": "AUTOPREFIXER_GRID=autoplace webpack --mode=production --progress --env prod",
    "build:stats": "AUTOPREFIXER_GRID=autoplace webpack --mode=production --progress --json > stats.json --env prod",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build:analyzer": "webpack-bundle-analyzer --port 4200 stats.json",
    "build": "concurrently --kill-others-on-fail \"npm:build:code\" \"npm:build:stats\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eutrepe/webpack-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "boilerplate"
  ],
  "author": "Maciej Bobrowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Eutrepe/webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/Eutrepe/webpack-boilerplate#readme",
  "engines": {
    "node": ">= 10.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.4",
    "@types/mini-css-extract-plugin": "^1.2.2",
    "@types/script-ext-html-webpack-plugin": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^6.0.0",
    "css-loader": "^5.1.2",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "extract-loader": "^5.1.0",
    "favicons": "^6.2.1",
    "favicons-webpack-plugin": "^5.0.2",
    "file-loader": "^6.2.0",
    "git-revision-webpack-plugin": "^3.0.6",
    "html-loader": "^2.1.2",
    "html-webpack-harddisk-plugin": "^2.0.0",
    "html-webpack-plugin": "^5.3.1",
    "image-webpack-loader": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "mini-css-extract-plugin": "^1.3.9",
    "nodemon": "^2.0.7",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.2.8",
    "postcss-loader": "^5.2.0",
    "precss": "^4.0.0",
    "prettier": "^2.2.1",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "style-loader": "^2.0.0",
    "svgo": "^2.2.2",
    "svgo-loader": "^3.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.25.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.0.0-beta.0",
