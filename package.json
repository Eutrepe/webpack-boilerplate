{
  "name": "webpack-boilerplate",
  "version": "1.0.2",
  "description": "Boilerplate for webpack projects",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch webpack.config.ts --exec \"AUTOPREFIXER_GRID=autoplace webpack serve --mode=development --env dev\"",
    "build:code": "AUTOPREFIXER_GRID=autoplace webpack --mode=production --progress --env prod",
    "build:stats": "AUTOPREFIXER_GRID=autoplace webpack --mode=production --progress --json > stats.json --env prod",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build:analyzer": "webpack-bundle-analyzer --port 4200 stats.json",
    "build": "concurrently --kill-others-on-fail \"npm:build:code\" \"npm:build:stats\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eutrepe/webpack-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "boilerplate"
  ],
  "author": "Maciej Bobrowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Eutrepe/webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/Eutrepe/webpack-boilerplate#readme",
  "engines": {
    "node": ">= 12.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.6",
    "@types/mini-css-extract-plugin": "^2.0.1",
    "@types/script-ext-html-webpack-plugin": "^2.1.3",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^6.2.0",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "extract-loader": "^5.1.0",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-loader": "^2.1.2",
    "html-webpack-harddisk-plugin": "^2.0.0",
    "html-webpack-plugin": "^5.3.2",
    "image-webpack-loader": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "mini-css-extract-plugin": "^2.2.0",
    "nodemon": "^2.0.12",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "precss": "^4.0.0",
    "prettier": "^2.3.2",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.37.5",
    "sass-loader": "^12.1.0",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "style-loader": "^3.2.1",
    "svgo": "^2.3.1",
    "svgo-loader": "^3.0.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.48.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.0.0-rc.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "core-js": "^3.16.0",
