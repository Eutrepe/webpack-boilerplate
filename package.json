{
  "name": "webpack-boilerplate",
  "version": "1.2.0",
  "description": "Boilerplate for webpack projects",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --watch webpack.config.js --exec \"webpack serve --mode=development --env dev\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,scss,css}\"",
    "build:code": "webpack --mode=production --progress --env prod",
    "build:stats": "webpack --mode=production --progress --json > stats.json --env prod",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build:analyzer": "webpack-bundle-analyzer --port 4200 stats.json",
    "build:full": "concurrently 'npm:build:code' 'npm:build:stats'",
    "build:en": "webpack --mode=production --progress --env prod lang=en",
    "build:pl": "webpack --mode=production --progress --env prod lang=pl",
    "build:after": "cp src/index.html public/",
    "build": "concurrently 'npm:build:pl' 'npm:build:en' && npm run build:after",
    "po2csv": "concurrently 'npm:po2csv:en' 'npm:po2csv:pl'",
    "po2csv:en": "node scripts/po2csv.js i18n/en.po > i18n/csv/en.csv",
    "po2csv:pl": "node scripts/po2csv.js i18n/pl.po > i18n/csv/pl.csv",
    "csv2po": "concurrently 'npm:csv2po:en' 'npm:csv2po:pl'",
    "csv2po:en": "node scripts/po2csv.js i18n/pot/en.pot i18n/csv/en.csv",
    "csv2po:pl": "node scripts/po2csv.js i18n/pot/pl.pot i18n/csv/pl.csv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eutrepe/webpack-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "boilerplate"
  ],
  "author": "Maciej Bobrowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Eutrepe/webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/Eutrepe/webpack-boilerplate#readme",
  "engines": {
    "node": ">= 18.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@fast-csv/format": "^5.0.2",
    "@fast-csv/parse": "^5.0.2",
    "@messageformat/core": "^3.4.0",
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.9",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "babel-loader": "^9.2.1",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.1.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "dotenv": "^16.4.5",
    "dotenv-webpack": "^8.1.0",
    "ejs-loader": "^0.5.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "favicons": "^7.2.0",
    "favicons-webpack-plugin": "^6.0.1",
    "gettext-to-messageformat": "^0.4.0",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-loader": "^5.1.0",
    "html-webpack-harddisk-plugin": "^2.0.0",
    "html-webpack-plugin": "^5.6.3",
    "image-webpack-loader": "^8.1.0",
    "imagemin-gifsicle": "^7.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.7",
    "pofile": "^1.1.4",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.1",
    "prettier": "^3.3.3",
    "pug": "^3.0.3",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.81.0",
    "sass-loader": "^16.0.3",
    "simple-pug-loader": "^0.2.1",
    "style-loader": "^4.0.0",
    "svgo": "^3.3.2",
    "svgo-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "webpack-merge": "^6.0.1",
    "webpack-shell-plugin-next": "^2.3.2"
  },
  "dependencies": {
    "@glidejs/glide": "^3.6.2",
    "core-js": "^3.39.0",
    "intersection-observer": "^0.12.2",
    "regenerator-runtime": "^0.14.1"
  }
}
