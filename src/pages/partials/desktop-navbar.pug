nav.navbar(role="navigation" aria-label=_t('NAV.aria.mainNav'))
    a.skip-link.button(href="#main")= _t('NAV.skipToMain')

    .container
        .navbar__wrapper
            a.navbar__logo(href=_href('index'), aria-label=_t('NAV.logo.ariaLabel'))
                //- img(src=require('../assets/images/svg.svg') alt="logo")
                | logo

            button.navbar__toggle(
                type="button"
                aria-controls="main-nav"
                aria-expanded="false"
                data-menu-toggle
                data-navigation-open
                aria-label=_t('NAV.menuToggle.open'))
                svg.icon.icon--menu(width="24" height="24" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true")
                    path(d="M3 6h18M3 12h18M3 18h18")

            include nav
